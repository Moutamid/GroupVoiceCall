<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/conversation_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/profile"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="-40dp"
            android:layout_alignEnd="@+id/conversation_img"
            android:layout_below="@+id/conversation_img"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:elevation="5dp"
            android:id="@+id/mic_on"
            android:src="@drawable/ic_baseline_mic_none_24"
            android:background="@drawable/shape_circle"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mic_on"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:id="@+id/name"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</RelativeLayout>